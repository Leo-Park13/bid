      .format(", ".join("{}ë²ˆ".format(n) for n in Bresult)))
# print("ì„ íƒí•˜ì‹  ê³µ (ê³µ ë²ˆí˜¸, ê°’): {}ë²ˆ,{}ë²ˆ".format(BCnum1, BCnum2))
# for BCnum1, BCnum2 in Bresult:
#    print("{}ë²ˆ ê³µ â†’ {} ì›".format(BCnum1, BCnum2))
print("ì¶”ì¶œëœ {}ê°œì˜ ë²ˆí˜¸ì™€ ê¸ˆì•¡".format(Bnum))
print("ë‚´ê°€ ì„ íƒí•œ ê³µ â†’ {}ë²ˆ, {}ë²ˆ".format(Bresult[0], Bresult[1]))
print("ë‚´ê°€ ì„ íƒí•œ ê³µì˜ ê¸ˆì•¡{:,}ì›".format(sum(values)))
# print("ìë™ìœ¼ë¡œ ì„ íƒëœ ë²ˆí˜¸ {},{}".format(i, CompanyCount))
top_two = counter.most_common(1)
print("ìë™ìœ¼ë¡œ ê°€ì¥ ë§ì´ ì„ íƒëœ ë²ˆí˜¸:")
for num in top_two:
    print("{}ë²ˆ".format(num))

print("ì¶”ì¶œëœ ê³µ ê¸ˆì•¡ í‰ê· : {:,} ì›".format(int(average)))
