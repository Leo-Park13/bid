# 1ì°¨ 

import random

def get_random_values(num, percent_input):
    # min, max ê³„ì‚°
    percent = num * (percent_input / 100)
    min_value = num - percent
    max_value = num + percent

    # 15ë“±ë¶„ ë¦¬ìŠ¤íŠ¸ ë§Œë“¤ê¸°
    diff = max_value - min_value
    step = diff / 15
    value_list = [min_value + step * i for i in range(16)]

    # ê³µ ë²ˆí˜¸ì™€ ê°’ ë§¤í•‘ (1ë²ˆ~15ë²ˆ)
    ball_dict = {i: value_list[i] for i in range(1, 16)}

    # Nê°œ ëœë¤ ì¶”ì¶œ
    random_indexes = random.sample(range(1, 16), Bnum)
    random_values = [(i, ball_dict[i]) for i in random_indexes]

    # ì¶œë ¥
    for i in range(1, 16):
        print("{}ë²ˆ ê³µ â†’ {}".format(i, ball_dict[i]))
    print("ëœë¤í•˜ê²Œ ë½‘íŒ ê³µ:")
    for i, val in random_values:
        print("{}ë²ˆ ê³µ â†’ {}".format(i, val))
    print("{}ì˜ Â±{}% ë²”ìœ„ëŠ” {} ~ {} ì…ë‹ˆë‹¤.".format(num, percent_input, min_value, max_value))
    print("15ë“±ë¶„ ë¦¬ìŠ¤íŠ¸:")
    return random_values

# ì‚¬ìš© ì˜ˆì‹œ
Bnum = float(input("ê³µì„ ëª‡ê°œë¥¼ ë½‘ì„ê¹Œìš”?: "))
num = float(input("ìˆ«ìë¥¼ ì…ë ¥í•˜ì„¸ìš”: "))
percent_input = float(input("í¼ì„¼íŠ¸ ê°’ì„ ì…ë ¥í•˜ì„¸ìš” (ì˜ˆ: 2): "))

result = get_random_values(Bnum, num, percent_input)
print("ìµœì¢… ì¶”ì¶œëœ {}ê°œ (ê³µ ë²ˆí˜¸, ê°’): {}".format(Bnum, result))

# 3ê°œì˜ ê³µì˜ ê¸ˆì•¡ í‰ê·  êµ¬í•˜ê¸°

import random

def get_random_values(num, percent_input, Bnum):
    # min, max ê³„ì‚°
    percent = num * (percent_input / 100)
    min_value = num - percent
    max_value = num + percent

    # 15ë“±ë¶„ ë¦¬ìŠ¤íŠ¸ ë§Œë“¤ê¸°
    diff = max_value - min_value
    step = diff / 15
    value_list = [min_value + step * i for i in range(16)]

    # ê³µ ë²ˆí˜¸ì™€ ê°’ ë§¤í•‘ (1ë²ˆ~15ë²ˆ)
    ball_dict = {i: value_list[i] for i in range(1, 16)}

    # Nê°œ ëœë¤ ì¶”ì¶œ
    random_indexes = random.sample(range(1, 16), Bnum)
    random_values = [(i, int(ball_dict[i])) for i in random_indexes]  # ì •ìˆ˜ë¡œ ë³€í™˜

    # ì¶œë ¥
    print("\n===== ê³µ ë°°ì¹˜ =====")
    for i in range(1, 16):
        print("{}ë²ˆ ê³µ â†’ {:,}".format(i, int(ball_dict[i])))

    print("\n===== ëœë¤ ì¶”ì¶œëœ ê³µ =====")
    for i, val in random_values:
        print("{}ë²ˆ ê³µ â†’ {:,}".format(i, val))

    print("\n{}ì˜ Â±{}% ë²”ìœ„ëŠ” {:,} ~ {:,} ì…ë‹ˆë‹¤.".format(int(num), percent_input, int(min_value), int(max_value)))
    print("15ë“±ë¶„ ë¦¬ìŠ¤íŠ¸:\n", [int(v) for v in value_list])

    return random_values

# ì‚¬ìš© ì˜ˆì‹œ
Bnum = int(input("ê³µì„ ëª‡ ê°œë¥¼ ë½‘ì„ê¹Œìš”?: "))
num = float(input("ê¸°ì¤€ ìˆ«ìë¥¼ ì…ë ¥í•˜ì„¸ìš”: "))
percent_input = float(input("í¼ì„¼íŠ¸ ê°’ì„ ì…ë ¥í•˜ì„¸ìš” (ì˜ˆ: 2): "))

result = get_random_values(num, percent_input, Bnum)

# í‰ê·  ê³„ì‚°
values = [val for _, val in result]
average = sum(values) / len(values)

# ê³µ Nê°œì˜ í‰ê· ê°’ì˜ 88.7% ê³„ì‚° 
result = average * 0.887

# ì¶œë ¥

print("\n===== ê²°ê³¼ =====")
print("ì¶”ì¶œëœ {}ê°œ (ê³µ ë²ˆí˜¸, ê°’): {}".format(Bnum, result))
for i, val in reault:
    print("{}ë²ˆì˜ ê³µ ->{:,}".format(i,val))
print("ì¶”ì¶œëœ ê³µ ê¸ˆì•¡ í‰ê· : {:,}".format(int(average)))
print("í‰ê·  ê¸ˆì•¡ì˜ 88.7%ë¥¼ ê³„ì‚°í•œ ê²°ê³¼:{:,}".format(result))


# ì¶”ê°€ í• ê²ƒ + íˆ¬ì°°ìœ¨ ì…ë ¥ ë°›ê³  ì—…ì²´ìˆ˜ ì…ë ¥ ë°›ì•„ì„œ ì…ë ¥ ë°›ì€ ìˆ˜ ë§Œí¼ ëœë¤ ëŒë¦¬ê³  ê°€ì¥ ë§ì´ ë‚˜ì˜¨ ìˆ«ì 2ê°œ ë½‘ê¸°

# 2ì°¨


import random
from collections import Counter


def get_random_values(num, percent_input, Bnum):
    # min, max ê³„ì‚°
    percent = (num * (percent_input / 100))
    min_value = num - percent
    max_value = num + percent

    # ê³µ ë²ˆí˜¸ ì„ íƒì‹œ 1<N<15 ì´í•˜ ì„ íƒ (ì¤‘ë³µ ë¶ˆê°€ëŠ¥)
    # 1 < BCnum1 < 15
    # 1 < BCnum2 < 15

    # 15ë“±ë¶„ ë¦¬ìŠ¤íŠ¸ ë§Œë“¤ê¸°
    diff = max_value - min_value
    step = diff / 15
    value_list = [min_value + step * i for i in range(16)]

    # ê³µ ë²ˆí˜¸ì™€ ê°’ ë§¤í•‘ (1ë²ˆ~15ë²ˆ)
    ball_dict = {i: value_list[i] for i in range(1, 16)}

    # Nê°œ ëœë¤ ì¶”ì¶œ
    random_indexes = random.sample(range(1, 16), Bnum)
    random_values = [(i, int(ball_dict[i])) for i in random_indexes]  # ì •ìˆ˜ë¡œ ë³€í™˜

    # ì¶œë ¥
    print("\n===== ê³µ ë°°ì¹˜ =====")
    for i in range(1, 16):
        print("\n{}ë²ˆ ê³µ â†’ {}".format(i, int(ball_dict[i])))

    print("\n===== ëœë¤ ì¶”ì¶œëœ ê³µ =====")
    for i, val in random_values:
        print("\n{}ë²ˆ ê³µ â†’ {:,} ì› ".format(i, val))

    print("\n{}ì˜ Â±{}% ë²”ìœ„ëŠ” {:,} ì› ~ {:,} ì› ì…ë‹ˆë‹¤."
          .format(int(num), percent_input, int(min_value), int(max_value)))
    # print("15ë“±ë¶„ ë¦¬ìŠ¤íŠ¸:\n", [int(v) for v in value_list])

    return random_values


